<%- include('../partials/header') %>

<!-- Course Edit Page -->
<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-edit"></i> Edit Course
    </h1>
    <p class="page-subtitle">Update course information for <%= course.courseCode %> - <%= course.courseName %></p>
</div>

<!-- Navigation Breadcrumb -->
<div class="breadcrumb">
    <a href="/courses" class="breadcrumb-link">
        <i class="fas fa-graduation-cap"></i> Course Management
    </a>
    <span class="breadcrumb-separator">›</span>
    <span class="breadcrumb-current">Edit <%= course.courseCode %></span>
</div>

<!-- Course Edit Form -->
<div class="form-container">
    <div class="form-header">
        <h2><i class="fas fa-graduation-cap"></i> Update Course Information</h2>
        <p>Make changes to the course details below. Required fields are marked with <span class="required">*</span></p>
        
        <!-- Course Info Summary -->
        <div class="alert alert-info" style="margin-top: 1rem;">
            <strong><i class="fas fa-info-circle"></i> Current Course:</strong> 
            <%= course.courseCode %> - <%= course.courseName %> 
            (<%= course.credits %> <%= course.credits === 1 ? 'credit' : 'credits' %>)
            <br>
            <small><strong>Created:</strong> <%= new Date(course.createdAt).toLocaleDateString() %> | 
            <strong>Last Updated:</strong> <%= new Date(course.updatedAt).toLocaleDateString() %></small>
        </div>
    </div>
    
    <form action="/courses/<%= course._id %>?_method=PUT" method="POST" class="academic-form" novalidate>
        
        <!-- Course Code and Name Section -->
        <div class="form-section">
            <h3 class="form-section-title">
                <i class="fas fa-tag"></i> Course Identification
            </h3>
            
            <div class="form-group-row">
                <div class="form-group">
                    <label for="courseCode" class="form-label">
                        Course Code <span class="required">*</span>
                        <i class="fas fa-info-circle tooltip" title="Use format like CPAN212, MATH101, ENGL200"></i>
                    </label>
                    <input type="text" 
                           id="courseCode" 
                           name="courseCode" 
                           class="form-control" 
                           value="<%= course.courseCode %>"
                           placeholder="e.g., CPAN212, MATH101"
                           pattern="[A-Z]{3,4}[0-9]{3}"
                           title="Course code should be 3-4 letters followed by 3 numbers"
                           maxlength="7"
                           required>
                    <small class="form-help">Format: 3-4 letters + 3 numbers (e.g., CPAN212)</small>
                </div>
                
                <div class="form-group">
                    <label for="credits" class="form-label">
                        Credits <span class="required">*</span>
                        <i class="fas fa-star tooltip" title="Number of credit hours (0.5 to 6.0)"></i>
                    </label>
                    <select id="credits" name="credits" class="form-control" required>
                        <option value="">Select Credits</option>
                        <option value="0.5" <%= course.credits == 0.5 ? 'selected' : '' %>>0.5 credits</option>
                        <option value="1" <%= course.credits == 1 ? 'selected' : '' %>>1 credit</option>
                        <option value="1.5" <%= course.credits == 1.5 ? 'selected' : '' %>>1.5 credits</option>
                        <option value="2" <%= course.credits == 2 ? 'selected' : '' %>>2 credits</option>
                        <option value="2.5" <%= course.credits == 2.5 ? 'selected' : '' %>>2.5 credits</option>
                        <option value="3" <%= course.credits == 3 ? 'selected' : '' %>>3 credits</option>
                        <option value="3.5" <%= course.credits == 3.5 ? 'selected' : '' %>>3.5 credits</option>
                        <option value="4" <%= course.credits == 4 ? 'selected' : '' %>>4 credits</option>
                        <option value="4.5" <%= course.credits == 4.5 ? 'selected' : '' %>>4.5 credits</option>
                        <option value="5" <%= course.credits == 5 ? 'selected' : '' %>>5 credits</option>
                        <option value="5.5" <%= course.credits == 5.5 ? 'selected' : '' %>>5.5 credits</option>
                        <option value="6" <%= course.credits == 6 ? 'selected' : '' %>>6 credits</option>
                    </select>
                    <small class="form-help">Current: <%= course.credits %> <%= course.credits === 1 ? 'credit' : 'credits' %></small>
                </div>
            </div>
            
            <div class="form-group">
                <label for="courseName" class="form-label">
                    Course Name <span class="required">*</span>
                    <i class="fas fa-book tooltip" title="Full descriptive name of the course"></i>
                </label>
                <input type="text" 
                       id="courseName" 
                       name="courseName" 
                       class="form-control" 
                       value="<%= course.courseName %>"
                       placeholder="e.g., Introduction to Web Programming"
                       maxlength="100"
                       required>
                <small class="form-help">Enter the full course title as it appears in the catalog</small>
            </div>
        </div>

        <!-- Course Details Section -->
        <div class="form-section">
            <h3 class="form-section-title">
                <i class="fas fa-info-circle"></i> Course Details
            </h3>
            
            <div class="form-group-row">
                <div class="form-group">
                    <label for="semester" class="form-label">
                        Semester Offered
                        <i class="fas fa-calendar-alt tooltip" title="When is this course typically offered?"></i>
                    </label>
                    <select id="semester" name="semester" class="form-control">
                        <option value="Fall" <%= course.semester === 'Fall' ? 'selected' : '' %>>Fall Semester</option>
                        <option value="Winter" <%= course.semester === 'Winter' ? 'selected' : '' %>>Winter Semester</option>
                        <option value="Summer" <%= course.semester === 'Summer' ? 'selected' : '' %>>Summer Semester</option>
                    </select>
                    <small class="form-help">Currently: <%= course.semester || 'Fall' %> semester</small>
                </div>
                
                <div class="form-group">
                    <label for="isActive" class="form-label">
                        Course Status
                        <i class="fas fa-toggle-on tooltip" title="Is this course currently being offered?"></i>
                    </label>
                    <select id="isActive" name="isActive" class="form-control">
                        <option value="true" <%= course.isActive ? 'selected' : '' %>>Active (Currently Offered)</option>
                        <option value="false" <%= !course.isActive ? 'selected' : '' %>>Inactive (Not Currently Offered)</option>
                    </select>
                    <small class="form-help">Current status: <%= course.isActive ? 'Active' : 'Inactive' %></small>
                </div>
            </div>
            
            <div class="form-group">
                <label for="instructor" class="form-label">
                    Instructor Name
                    <i class="fas fa-user-tie tooltip" title="Primary instructor for this course (optional)"></i>
                </label>
                <input type="text" 
                       id="instructor" 
                       name="instructor" 
                       class="form-control" 
                       value="<%= course.instructor || '' %>"
                       placeholder="e.g., Dr. Sarah Johnson"
                       maxlength="50">
                <small class="form-help">Optional: Primary instructor or course coordinator</small>
            </div>
            
            <div class="form-group">
                <label for="description" class="form-label">
                    Course Description
                    <i class="fas fa-align-left tooltip" title="Detailed description of course content and objectives"></i>
                </label>
                <textarea id="description" 
                          name="description" 
                          class="form-control" 
                          rows="4" 
                          placeholder="Provide a detailed description of the course content, learning objectives, and key topics covered..."
                          maxlength="500"><%= course.description || '' %></textarea>
                <small class="form-help">Optional: Describe what students will learn (max 500 characters)</small>
                <div class="char-counter">
                    <span id="charCount"><%= (course.description || '').length %></span>/500 characters
                </div>
            </div>
        </div>

        <!-- Change Summary Section -->
        <div class="form-section">
            <h3 class="form-section-title">
                <i class="fas fa-history"></i> Change Summary
            </h3>
            <div id="changesSummary" class="alert alert-secondary">
                <p><i class="fas fa-clock"></i> <strong>No changes detected yet.</strong> Modify any field above to see a summary of changes.</p>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary btn-lg" id="saveBtn">
                <i class="fas fa-save"></i> Save Changes
            </button>
            <a href="/courses" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Back to Catalog
            </a>
            <button type="reset" class="btn btn-warning btn-lg" id="resetBtn">
                <i class="fas fa-undo"></i> Reset to Original
            </button>
            <button type="button" class="btn btn-danger btn-lg" onclick="confirmDelete()">
                <i class="fas fa-trash-alt"></i> Delete Course
            </button>
        </div>
    </form>
</div>

<!-- Hidden Delete Form -->
<form id="deleteForm" method="POST" action="/courses/<%= course._id %>?_method=DELETE" style="display: none;">
</form>

<!-- Course History/Metadata -->
<div class="form-container" style="margin-top: 3rem;">
    <div class="alert alert-info">
        <h4><i class="fas fa-database"></i> Course Metadata</h4>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem;">
            <div>
                <strong>Course ID:</strong> <code><%= course._id %></code><br>
                <strong>Created:</strong> <%= new Date(course.createdAt).toLocaleString() %>
            </div>
            <div>
                <strong>Last Updated:</strong> <%= new Date(course.updatedAt).toLocaleString() %><br>
                <strong>Version:</strong> <%= course.__v || 0 %>
            </div>
            <div>
                <strong>Status:</strong> <%= course.isActive ? 'Active' : 'Inactive' %><br>
                <strong>API Endpoint:</strong> <a href="/courses/<%= course._id %>/api" target="_blank">/api</a>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript for enhanced editing experience -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Store original values for comparison
    const originalValues = {
        courseCode: '<%= course.courseCode %>',
        courseName: '<%= course.courseName %>',
        credits: '<%= course.credits %>',
        semester: '<%= course.semester || "Fall" %>',
        isActive: '<%= course.isActive %>',
        instructor: '<%= course.instructor || "" %>',
        description: '<%= course.description || "" %>'
    };
    
    // Character counter for description
    const descriptionField = document.getElementById('description');
    const charCounter = document.getElementById('charCount');
    
    if (descriptionField && charCounter) {
        descriptionField.addEventListener('input', function() {
            const currentLength = this.value.length;
            charCounter.textContent = currentLength;
            
            // Color coding for character count
            if (currentLength > 450) {
                charCounter.style.color = '#dc2626';
            } else if (currentLength > 350) {
                charCounter.style.color = '#d97706';
            } else {
                charCounter.style.color = '#059669';
            }
            
            updateChangesSummary();
        });
    }
    
    // Auto-format course code as user types
    const courseCodeField = document.getElementById('courseCode');
    if (courseCodeField) {
        courseCodeField.addEventListener('input', function() {
            // Convert to uppercase and maintain format
            let value = this.value.toUpperCase();
            
            // Remove any characters that don't match pattern
            value = value.replace(/[^A-Z0-9]/g, '');
            
            // Limit to 7 characters max
            if (value.length > 7) {
                value = value.substring(0, 7);
            }
            
            this.value = value;
            
            // Visual feedback for valid format
            const isValid = /^[A-Z]{3,4}[0-9]{0,3}$/.test(value);
            if (value.length > 0) {
                this.style.borderColor = isValid ? '#059669' : '#dc2626';
            } else {
                this.style.borderColor = '';
            }
            
            updateChangesSummary();
        });
    }
    
    // Monitor all form fields for changes
    const formFields = ['courseCode', 'courseName', 'credits', 'semester', 'isActive', 'instructor'];
    formFields.forEach(fieldName => {
        const field = document.getElementById(fieldName);
        if (field) {
            field.addEventListener('change', updateChangesSummary);
            field.addEventListener('input', updateChangesSummary);
        }
    });
    
    function updateChangesSummary() {
        const changes = [];
        const changesContainer = document.getElementById('changesSummary');
        
        // Check each field for changes
        Object.keys(originalValues).forEach(fieldName => {
            const field = document.getElementById(fieldName);
            if (field) {
                const currentValue = field.value.toString();
                const originalValue = originalValues[fieldName].toString();
                
                if (currentValue !== originalValue) {
                    const fieldLabel = field.previousElementSibling.textContent.replace(' *', '').replace(/\s+[^\w\s]/g, '');
                    changes.push({
                        field: fieldLabel,
                        from: originalValue,
                        to: currentValue
                    });
                }
            }
        });
        
        if (changes.length > 0) {
            let html = '<p><i class="fas fa-edit"></i> <strong>Changes detected:</strong></p><ul>';
            changes.forEach(change => {
                html += `<li><strong>${change.field}:</strong> `;
                html += `"${change.from}" → "${change.to}"</li>`;
            });
            html += '</ul>';
            changesContainer.innerHTML = html;
            changesContainer.className = 'alert alert-warning';
            
            // Enable save button
            document.getElementById('saveBtn').disabled = false;
        } else {
            changesContainer.innerHTML = '<p><i class="fas fa-check-circle"></i> <strong>No changes detected.</strong> Form matches original course data.</p>';
            changesContainer.className = 'alert alert-secondary';
        }
    }
    
    // Reset form to original values
    document.getElementById('resetBtn').addEventListener('click', function() {
        if (confirm('Are you sure you want to reset all fields to their original values?')) {
            // Reset will be handled by browser, but we need to update the summary
            setTimeout(updateChangesSummary, 100);
        }
    });
    
    // Form validation
    const form = document.querySelector('.academic-form');
    if (form) {
        form.addEventListener('submit', function(e) {
            const courseCode = document.getElementById('courseCode').value;
            const courseName = document.getElementById('courseName').value.trim();
            const credits = document.getElementById('credits').value;
            
            let hasErrors = false;
            let errorMessage = 'Please fix the following errors:\n\n';
            
            // Course code validation
            if (!/^[A-Z]{3,4}[0-9]{3}$/.test(courseCode)) {
                hasErrors = true;
                errorMessage += '• Course code must be 3-4 letters followed by exactly 3 numbers\n';
            }
            
            // Course name validation
            if (courseName.length < 3) {
                hasErrors = true;
                errorMessage += '• Course name must be at least 3 characters long\n';
            }
            
            // Credits validation
            if (!credits) {
                hasErrors = true;
                errorMessage += '• Please select the number of credits\n';
            }
            
            if (hasErrors) {
                e.preventDefault();
                alert(errorMessage);
            }
        });
    }
});

function confirmDelete() {
    const courseName = '<%= course.courseCode %>';
    const confirmMessage = `Are you absolutely sure you want to delete course ${courseName}?\n\n` +
                          `This action CANNOT be undone and will permanently remove:\n` +
                          `• Course information\n` +
                          `• All associated data\n\n` +
                          `Type "${courseName}" to confirm deletion:`;
    
    const userInput = prompt(confirmMessage);
    
    if (userInput === courseName) {
        document.getElementById('deleteForm').submit();
    } else if (userInput !== null) {
        alert('Deletion cancelled. The course code entered did not match.');
    }
}
</script>

<%- include('../partials/footer') %>