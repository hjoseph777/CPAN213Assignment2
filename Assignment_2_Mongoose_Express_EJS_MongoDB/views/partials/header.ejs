<!-- views/partials/header.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Course Management System' %> | Academic Course Manager</title>
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Academic-themed header with gradient background -->
    <header class="main-header">
        <nav class="navbar">
            <div class="nav-container">
                <!-- Logo/Brand with academic feel -->
                <a href="/courses" class="nav-brand">
                    <i class="fas fa-graduation-cap"></i>
                    <span class="brand-text">Course Manager</span>
                </a>
                
                <!-- Navigation links -->
                <div class="nav-menu">
                    <a href="/courses" class="nav-link <%= (typeof title !== 'undefined' && title.includes('Catalog')) ? 'active' : '' %>">
                        <i class="fas fa-book-open"></i> Course Catalog
                    </a>
                    <a href="/courses/new" class="nav-link <%= (typeof title !== 'undefined' && title.includes('Add')) ? 'active' : '' %>">
                        <i class="fas fa-plus-circle"></i> Add Course
                    </a>
                </div>
                
                <!-- Mobile menu toggle -->
                <button class="mobile-toggle" onclick="toggleMobileMenu()">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </nav>
    </header>

    <!-- Flash messages with academic styling -->
    <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
        <div class="alert alert-success">
            <div class="alert-content">
                <i class="fas fa-check-circle"></i>
                <div class="alert-messages">
                    <% success_msg.forEach(function(msg) { %>
                        <p><%= msg %></p>
                    <% }); %>
                </div>
                <button class="alert-close" onclick="closeAlert(this)">&times;</button>
            </div>
        </div>
    <% } %>

    <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
        <div class="alert alert-error">
            <div class="alert-content">
                <i class="fas fa-exclamation-triangle"></i>
                <div class="alert-messages">
                    <% error_msg.forEach(function(msg) { %>
                        <p><%= msg %></p>
                    <% }); %>
                </div>
                <button class="alert-close" onclick="closeAlert(this)">&times;</button>
            </div>
        </div>
    <% } %>

    <!-- Main content area -->
    <main class="main-content">